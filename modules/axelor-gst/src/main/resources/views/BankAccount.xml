<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
	
		<grid model="com.axelor.gst.db.BankAccount" title="Bank Accounts" name="bankAccount_grid">
			<field name="name" />
			<field name="accountNumber" />
			<field name="IFSC" />
			<field name="type" />
		</grid>
		
		<form model="com.axelor.gst.db.BankAccount" title="Bank Account" name="bankAccount_form" css="panel-green">
			<panel name="mainPanel" title="Bank details">
				<field name="name" />
				<field name="accountNumber" />
				<field name="IFSC" />
				<field name="type" />
				<field name="address" />
			</panel>
		</form>

</object-views>
<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
	
	<cards name="party_card" model="com.axelor.gst.db.Party" title="Parties List" width="100px">
		<field name="refrence" />
		<field name="name" />
		<field name="type" />
		<field name="customer" />
		<field name="supplier" />
		<field name="gstin" />
		
		<template>
			<![CDATA[
				<div class="span-4">
					<strong>{{refrence}}</strong>
					<strong>{{name}}</strong>
					<strong>{{type}}</strong>
					<strong>{{customer}}</strong>
					<strong>{{supplier}}</strong>
					<strong>{{gstin}}</strong>
				</div> 
			]]>
		</template>
	</cards>
	
	<grid model="com.axelor.gst.db.Party" title="Parties" name="party_grid">
		<field name="refrence" />
		<field name="name" />
		<field name="type" />
		<field name="customer" />
		<field name="supplier" />
		<field name="gstin" />
	</grid>
	
	<form model="com.axelor.gst.db.Party" title="Party" name="party_form" onSave="action-add-sequence">
		<panel name="mainPanel">
			<field name="refrence" />
			<field name="name" />
			<field name="type" />
			<field name="customer" />
			<field name="supplier" />
			<field name="gstin" />
<!-- 			<field name="contact" widget="editor" /> -->
				<field name="contact" colSpan="12">
					<editor>
				  		<field name="name" />
				  		<field name="type" />
				  		<field name="primeryEmail" />
				  		<field name="secondaryEmail" />
				  		<field name="primeryPhone" />
				  		<field name="secondaryPhone" />
				</editor>
			</field>
			
			<field name="address" colSpan="12">
				<editor x-viewer="true">
					<field name="type" />
					<field name="line1" />
					<field name="line2" />
					<field name="city" />
					<field name="state" />
					<field name="country" />
					<field name="pinCode" />
				</editor>
			</field>
							
		</panel>
	</form>
	<action-method name="action-add-sequence" model="com.axelor.gst.db.Party">
		<call class="com.axelor.gst.web.PartyController" method="setPartSequence"/>
	</action-method>
</object-views>